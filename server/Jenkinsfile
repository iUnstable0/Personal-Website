pipeline {
    agent { 
        label 'iunstable0_personal-website'
    }

    stages {
        stage('Filter') {
            when {
                anyOf {
                    branch 'main'
                    branch 'staging'
                }
            }

            steps {
                script {
                    // Get list of changes from last successful build
                    def changeLogSets = currentBuild.changeSets
                    def changedFiles = []
                    changeLogSets.each { set ->
                        set.each { entry ->
                            entry.affectedFiles.each { file ->
                                changedFiles.add(file.path)
                            }
                        }
                    }

                    // Proceed if changes in directory
                    def proceed = changedFiles.any { it.startsWith('server/') }

                    if (!proceed) {
                        error('No changes in website, skipping deploy.')
                    }
                }
            }
        }

        stage('Install') {
            when {
                anyOf {
                    branch 'main'
                    branch 'staging'
                }
            }

            steps {
                echo 'Installing dependencies..'

                sh '''
                    for item in ./* ./.*; do
                        if [ "$item" != "./server" ] && [ "$item" != "./." ] && [ "$item" != "./.." ]; then
                            rm -rf "$item";
                        fi;
                    done

                    cd server

                    pnpm install || true
                '''
            }
        }

        stage('Build') {
            when {
                anyOf {
                    branch 'main'
                    branch 'staging'
                }
            }

            steps {
                echo 'Building..'

                sh '''
                    cd server
                    pnpm build || true
                '''
            }
        }

        stage('Deploy') {
            when {
                anyOf {
                    branch 'main'
                    branch 'staging'
                }
            }

            environment {
                DOPPLER_TOKEN = credentials('73adca38-0b56-499c-99b1-89ea088fc7c2')
            }

            steps {
                script {
                    // Override the DOPPLER_TOKEN for the staging branch
                    if (env.BRANCH_NAME == 'staging') {
                        env.DOPPLER_TOKEN = credentials('77c5efa1-2ae8-4865-89eb-073c74ca7b3e')

                        env.DEPLOY_PATH = '/home/deployments/iUnstable0_Personal-Website/Staging'
                        env.PM2_NAME = "@iUnstable0/Personal-Website/Staging-Server"
                        env.PNPM_COMMAND = 'staging'
                    } else {
                        env.DEPLOY_PATH = '/home/deployments/iUnstable0_Personal-Website/Main'
                        env.PM2_NAME = "@iUnstable0/Personal-Website/Server"
                        env.PNPM_COMMAND = 'start'
                    }
                }

                echo 'Deploying....'

                sh '''
                    if pm2 list | grep -q "${PM2_NAME}"; then
                        pm2 stop "${PM2_NAME}";
                    fi

                    mkdir -p ${DEPLOY_PATH};

                    rsync -aP server/ ${DEPLOY_PATH}/Server/;

                    echo ${DOPPLER_TOKEN} ${BRANCH_NAME} ${PNPM_COMMAND}

                    echo ${DOPPLER_TOKEN} > /tmp/doppler.token

                    if pm2 list | grep -q "${PM2_NAME}"; then
                        DOPPLER_TOKEN=${DOPPLER_TOKEN} pm2 restart "${PM2_NAME}" --update-env;
                    else
                        cd ${DEPLOY_PATH}/Server;
                        DOPPLER_TOKEN=${DOPPLER_TOKEN} FORCE_COLOR=1 pm2 start "pnpm ${PNPM_COMMAND}" --name "${PM2_NAME}";
                    fi
                '''

                sh 'rm -rf *;'
            }
        }
    }
}