{
	"compilerOptions": {
		"rootDirs": ["src"],
		"outDir": "build",
		"lib": ["ESNext", "dom"],
		"target": "ESNext",
		// "module": "esnext",
		"module": "commonjs",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"types": ["node"],
//		"watch": true,
		"resolveJsonModule": true,
		"baseUrl": "src",
		"incremental": true
	},

	"include": ["./src"],
	"exclude": ["node_modules"]
}

